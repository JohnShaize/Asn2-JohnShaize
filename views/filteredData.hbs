<h1>{{title}}</h1>

<table border="1">
    <thead>
        <tr>
            <th>Movie ID</th>
            <th>Title</th>
            <th>Year</th>
            <th>Rated</th>
            <th>Released</th>
            <th>Runtime</th>
            <th>Genre</th>
            <th>Director</th>
            <th>Writer</th>
            <th>Actors</th>
            <th>Plot</th>
            <th>Language</th>
            <th>Country</th>
            <th>Awards</th>
            <th>IMDb Rating</th>
            <th>Metascore</th>
        </tr>
    </thead>
    <tbody>
        {{#each movies}}
            {{#if (hasMetascore Metascore)}}
                <tr>
                    <td>{{Movie_ID}}</td>
                    <td>{{Title}}</td>
                    <td>{{Year}}</td>
                    <td>{{Rated}}</td>
                    <td>{{Released}}</td>
                    <td>{{Runtime}}</td>
                    <td>{{Genre}}</td>
                    <td>{{Director}}</td>
                    <td>{{Writer}}</td>
                    <td>{{Actors}}</td>
                    <td>{{Plot}}</td>
                    <td>{{Language}}</td>
                    <td>{{Country}}</td>
                    <td>{{Awards}}</td>
                    <td>{{imdbRating}}</td>
                    <td>{{Metascore}}</td>
                </tr>
            {{/if}}
        {{/each}}
    </tbody>
</table>